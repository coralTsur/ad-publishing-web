<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <%- include('headers/menuButtons') %>
</head>
<body>

<form action="/action/add" method="post">
    <div class="field">
        <label>Title</label>
        <div class="control">
            <input class="input" type="text" name="title">
        </div>
    </div>
    <div class="field">
        <label>Description</label>
        <div class="control">
            <input class="input" type="text" name="description">
        </div>
    </div>
    <div class="field">
        <label>Price</label>
        <div class="control">
            <input class="input" type="number" name="price">
        </div>
    </div>
    <div class="field">
        <label>Phone</label>
        <div class="control">
            <input class="input" type="number" name="phone">
        </div>
    </div>
    <div class="field">
        <label>Email</label>
        <div class="control">
            <input class="input" type="text" name="email">
        </div>
    </div>
    <div class="field mt-3">
        <div class="control">
            <button class="btn btn-lg btn-primary mb-1"  type="submit" class="button is-success">Save to database</button>

        </div>
    </div>
</form>
<form action="/login" method="get">
    <button class="btn btn-lg btn-primary mb-1"  type="submit" class="button is-success">LoginPage</button>
</form>
</body>
</html>